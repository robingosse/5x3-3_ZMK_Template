/*
 * Robin's 3x5+3 Split Keyboard (Layout A: thumbs in column 6)
 * SPDX-License-Identifier: MIT
 */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <3>;
        // Layout A: 3 rows Ã— 6 cols per side, thumbs at end of each row
        // Left:                                Right:
        // | L0  | L1  | L2  | L3  | L4  | L5  |   | R5  | R4  | R3  | R2  | R1  | R0  |
        // | L6  | L7  | L8  | L9  | L10 | L11 |   | R11 | R10 | R9  | R8  | R7  | R6  |
        // | L12 | L13 | L14 | L15 | L16 | L17 |   | R17 | R16 | R15 | R14 | R13 | R12 |
        //                                     (L5, L11, L17 are thumb keys)
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
        
        // Row pins (3 rows)
        row-gpios
            = <&pro_micro 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};
